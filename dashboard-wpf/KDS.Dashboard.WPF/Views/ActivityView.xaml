<UserControl x:Class="KDS.Dashboard.WPF.Views.ActivityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:KDS.Dashboard.WPF.ViewModels"
             xmlns:converters="clr-namespace:KDS.Dashboard.WPF.Converters">
    
    <UserControl.Resources>
        <converters:ResultToIconConverter x:Key="ResultToIconConverter"/>
        <converters:ResultToColorConverter x:Key="ResultToColorConverter"/>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <viewmodels:ActivityViewModel/>
    </UserControl.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                      Text="Real-Time Event Stream" 
                      FontSize="20" 
                      FontWeight="SemiBold"
                      Foreground="{StaticResource TextBrush}"/>

            <Border Grid.Column="1" 
                    Background="#E8F5E9" 
                    CornerRadius="12" 
                    Padding="12,6">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#4CAF50" Margin="0,0,8,0"/>
                    <TextBlock Text="Live" FontSize="12" Foreground="#2E7D32"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Event List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Events}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Style="{StaticResource ModernCard}" 
                                            Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Border Grid.Column="0" 
                                       Background="{StaticResource PrimaryBrush}" 
                                       CornerRadius="20" 
                                       Width="40" Height="40" 
                                       Margin="0,0,16,0">
                                    <materialDesign:PackIcon Kind="Flash" 
                                                            Width="24" Height="24" 
                                                            Foreground="White" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                </Border>

                                <!-- Details -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock FontWeight="SemiBold" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextBrush}">
                                        <Run Text="{Binding Event, Mode=OneWay}"/>
                                        <Run Text="â€¢" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <Run Text="{Binding DisplayTitle, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Context}" 
                                              FontSize="12" 
                                              Foreground="{StaticResource TextSecondaryBrush}" 
                                              Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Status Icon and Time -->
                                <StackPanel Grid.Column="2" 
                                           HorizontalAlignment="Right" 
                                           VerticalAlignment="Center">
                                    <materialDesign:PackIcon 
                                        Kind="{Binding DisplayStatus, Converter={StaticResource ResultToIconConverter}}"
                                        Width="24" 
                                        Height="24"
                                        Foreground="{Binding DisplayStatus, Converter={StaticResource ResultToColorConverter}}"
                                        HorizontalAlignment="Right"
                                        ToolTip="{Binding DisplayStatus}"/>
                                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" 
                                              FontSize="11" 
                                              Foreground="{StaticResource TextSecondaryBrush}" 
                                              Margin="0,4,0,0" 
                                              HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
