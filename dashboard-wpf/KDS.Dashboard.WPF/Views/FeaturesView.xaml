<UserControl x:Class="KDS.Dashboard.WPF.Views.FeaturesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:KDS.Dashboard.WPF.ViewModels"
             xmlns:models="clr-namespace:KDS.Dashboard.WPF.Models">
    
    <UserControl.DataContext>
        <viewmodels:FeaturesViewModel/>
    </UserControl.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="KDS Feature Inventory" 
                  FontSize="20" 
                  FontWeight="SemiBold"
                  Foreground="{StaticResource TextBrush}"
                  Margin="0,0,0,16"/>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Rows="1" Columns="3" Margin="0,0,0,16">
            <materialDesign:Card Style="{StaticResource ModernCard}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="âœ…" FontSize="32" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding ImplementedCount}" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="#2E7D32"/>
                        <TextBlock Text="Fully Implemented" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Style="{StaticResource ModernCard}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŸ¡" FontSize="32" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding PartialCount}" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="#F57C00"/>
                        <TextBlock Text="Partially Implemented" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Style="{StaticResource ModernCard}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“‹" FontSize="32" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding DesignedCount}" 
                                  FontSize="32" 
                                  FontWeight="Bold"
                                  Foreground="#1976D2"/>
                        <TextBlock Text="Designed Only" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </UniformGrid>

        <!-- Feature List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Features}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Style="{StaticResource ModernCard}" 
                                            Margin="0,0,0,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                              Text="{Binding Name}" 
                                              FontWeight="SemiBold" 
                                              FontSize="16"
                                              Foreground="{StaticResource TextBrush}"/>

                                    <Border Grid.Column="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FeatureStatus.FullyImplemented}">
                                                        <Setter Property="Background" Value="#E8F5E9"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FeatureStatus.PartiallyImplemented}">
                                                        <Setter Property="Background" Value="#FFF3E0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FeatureStatus.DesignedOnly}">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="CornerRadius" Value="4"/>
                                                <Setter Property="Padding" Value="8,4"/>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="11" FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FeatureStatus.FullyImplemented}">
                                                            <Setter Property="Foreground" Value="#2E7D32"/>
                                                            <Setter Property="Text" Value="âœ… FULLY IMPLEMENTED"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FeatureStatus.PartiallyImplemented}">
                                                            <Setter Property="Foreground" Value="#F57C00"/>
                                                            <Setter Property="Text" Value="ðŸŸ¡ PARTIALLY IMPLEMENTED"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:FeatureStatus.DesignedOnly}">
                                                            <Setter Property="Foreground" Value="#1976D2"/>
                                                            <Setter Property="Text" Value="ðŸ“‹ DESIGNED ONLY"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </Grid>

                                <!-- Stats -->
                                <StackPanel Grid.Row="1" 
                                           Orientation="Horizontal" 
                                           Margin="0,8,0,0">
                                    <Border Background="#E3F2FD" 
                                           CornerRadius="4" 
                                           Padding="8,4" 
                                           Margin="0,0,8,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="File" 
                                                                    Width="12" Height="12" 
                                                                    Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Files}" 
                                                      FontSize="11" 
                                                      Foreground="#1976D2"/>
                                            <TextBlock Text=" files" 
                                                      FontSize="11" 
                                                      Foreground="#1976D2"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#E8F5E9" 
                                           CornerRadius="4" 
                                           Padding="8,4" 
                                           Margin="0,0,8,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Script" 
                                                                    Width="12" Height="12" 
                                                                    Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Scripts}" 
                                                      FontSize="11" 
                                                      Foreground="#2E7D32"/>
                                            <TextBlock Text=" scripts" 
                                                      FontSize="11" 
                                                      Foreground="#2E7D32"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#FFF3E0" 
                                           CornerRadius="4" 
                                           Padding="8,4">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="TestTube" 
                                                                    Width="12" Height="12" 
                                                                    Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding Tests}" 
                                                      FontSize="11" 
                                                      Foreground="#F57C00"/>
                                            <TextBlock Text=" tests" 
                                                      FontSize="11" 
                                                      Foreground="#F57C00"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="{Binding Version}" 
                                              FontSize="11" 
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              Margin="12,0,0,0"
                                              VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Missing Components (if any) -->
                                <ItemsControl Grid.Row="2" 
                                             ItemsSource="{Binding MissingComponents}" 
                                             Margin="0,8,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <materialDesign:PackIcon Kind="AlertCircle" 
                                                                        Width="12" Height="12" 
                                                                        Foreground="#F57C00" 
                                                                        Margin="0,0,8,0"/>
                                                <TextBlock Text="Missing: " 
                                                          FontSize="11" 
                                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <TextBlock Text="{Binding}" 
                                                          FontSize="11" 
                                                          Foreground="#F57C00"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
