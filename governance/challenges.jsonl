# KDS Governance Challenges Log
# Format: One JSON object per line (JSONL)
# Purpose: Track when agents challenge user proposals that violate Tier 0 rules
#
# Schema:
# {
#   "timestamp": "ISO-8601",
#   "agent": "string (e.g., code-executor, work-planner)",
#   "rule_violated": "TDD_WORKFLOW|ARCHITECTURE|BRAIN_INTEGRITY|SOLID_PRINCIPLES|VALIDATION",
#   "user_request": "string (original request)",
#   "challenge_issued": true|false,
#   "user_response": "OVERRIDE: reason|accepted|modified",
#   "override_granted": true|false,
#   "outcome": "proceeded_with_override|followed_recommendation|request_modified",
#   "notes": "string (optional additional context)"
# }
