<UserControl x:Class="KDS.Dashboard.WPF.Views.ConversationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:KDS.Dashboard.WPF.ViewModels"
             xmlns:converters="clr-namespace:KDS.Dashboard.WPF.Converters">
    
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <viewmodels:ConversationsViewModel/>
    </UserControl.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="Conversation History (Last 20)" 
                  FontSize="20" 
                  FontWeight="SemiBold"
                  Foreground="{StaticResource TextBrush}"
                  Margin="0,0,0,16"/>

        <!-- Conversation List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Conversations}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Style="{StaticResource ModernCard}" 
                                            Margin="0,0,0,8">
                            <Expander HorizontalAlignment="Stretch"
                                     Background="Transparent"
                                     materialDesign:ExpanderAssist.HorizontalHeaderPadding="0">
                                <Expander.Header>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Grid.Column="0" 
                                               Background="{StaticResource SecondaryBrush}" 
                                               CornerRadius="20" 
                                               Width="40" Height="40" 
                                               Margin="0,0,16,0">
                                            <materialDesign:PackIcon Kind="MessageText" 
                                                                    Width="24" Height="24" 
                                                                    Foreground="White" 
                                                                    HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Details -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Title}" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="14"
                                                      Foreground="{StaticResource TextBrush}"/>
                                            <TextBlock Text="{Binding DisplaySnippet}" 
                                                       FontSize="12" 
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,6,0,0"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                                <TextBlock FontSize="12" 
                                                          Foreground="{StaticResource TextSecondaryBrush}">
                                                    <Run Text="{Binding MessageCount, Mode=OneWay}"/>
                                                    <Run Text=" messages"/>
                                                </TextBlock>
                                                <TextBlock Text="•" 
                                                          Margin="8,0" 
                                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <TextBlock FontSize="12" 
                                                          Foreground="{StaticResource TextSecondaryBrush}">
                                                    <Run Text="{Binding Duration, Mode=OneWay}"/>
                                                    <Run Text=" seconds"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Status and Time -->
                                        <StackPanel Grid.Column="2" 
                                                   HorizontalAlignment="Right" 
                                                   VerticalAlignment="Center">
                                            <Border Background="#E8F5E9" 
                                                   CornerRadius="4" 
                                                   Padding="8,4" 
                                                   HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Outcome}" 
                                                          FontSize="11" 
                                                          FontWeight="Bold" 
                                                          Foreground="#2E7D32"/>
                                            </Border>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='MMM dd, HH:mm'}" 
                                                      FontSize="11" 
                                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                                      Margin="0,4,0,0" 
                                                      HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Grid>
                                </Expander.Header>
                                
                                <!-- Expanded Message Details -->
                                <Border Background="#F5F5F5" 
                                       Padding="16" 
                                       Margin="0,8,0,0"
                                       CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock Text="Messages:" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Foreground="{StaticResource TextBrush}"
                                                  Margin="0,0,0,8"/>
                                        
                                        <ItemsControl ItemsSource="{Binding Messages}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" 
                                                           Padding="12" 
                                                           Margin="0,0,0,8"
                                                           CornerRadius="4"
                                                           BorderBrush="#E0E0E0"
                                                           BorderThickness="1">
                                                        <StackPanel>
                                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                                <materialDesign:PackIcon Kind="Account" 
                                                                                        Width="16" Height="16"
                                                                                        Foreground="{StaticResource PrimaryBrush}"
                                                                                        VerticalAlignment="Center"
                                                                                        Margin="0,0,8,0"/>
                                                                <TextBlock Text="{Binding User}" 
                                                                          FontWeight="SemiBold"
                                                                          FontSize="12"
                                                                          Foreground="{StaticResource TextBrush}"/>
                                                                <TextBlock Text="{Binding Intent}" 
                                                                          FontSize="11"
                                                                          Foreground="White"
                                                                          Background="{StaticResource PrimaryBrush}"
                                                                          Padding="6,2"
                                                                          Margin="8,0,0,0"
                                                                          VerticalAlignment="Center"/>
                                                                <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm:ss'}" 
                                                                          FontSize="11"
                                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                                          Margin="8,0,0,0"
                                                                          VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Text="{Binding Text}" 
                                                                      FontSize="12"
                                                                      Foreground="{StaticResource TextBrush}"
                                                                      TextWrapping="Wrap"
                                                                      Margin="24,0,0,0"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Files Modified -->
                                        <TextBlock Text="Files Modified:" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Foreground="{StaticResource TextBrush}"
                                                  Margin="0,12,0,8"
                                                  Visibility="{Binding FilesModified, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <ItemsControl ItemsSource="{Binding FilesModified}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <materialDesign:PackIcon Kind="FileDocument" 
                                                                                Width="14" Height="14"
                                                                                Foreground="{StaticResource SecondaryBrush}"
                                                                                VerticalAlignment="Center"
                                                                                Margin="0,0,8,0"/>
                                                        <TextBlock Text="{Binding}" 
                                                                  FontSize="11"
                                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Associated Git Commits (V8 NEW) -->
                                        <TextBlock Text="Associated Commits:" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Foreground="{StaticResource TextBrush}"
                                                  Margin="0,12,0,8"
                                                  Visibility="{Binding AssociatedCommits, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        <ItemsControl ItemsSource="{Binding AssociatedCommits}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="White" 
                                                           Padding="12" 
                                                           Margin="0,0,0,8"
                                                           CornerRadius="4"
                                                           BorderBrush="#F05032"
                                                           BorderThickness="2,0,0,0">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Git Icon -->
                                                            <materialDesign:PackIcon Grid.Column="0" 
                                                                                    Kind="Git" 
                                                                                    Width="24" Height="24"
                                                                                    Foreground="#F05032"
                                                                                    VerticalAlignment="Top"
                                                                                    Margin="0,2,12,0"/>
                                                            
                                                            <!-- Commit Details -->
                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding Message}" 
                                                                          FontWeight="SemiBold"
                                                                          FontSize="12"
                                                                          Foreground="{StaticResource TextBrush}"
                                                                          TextWrapping="Wrap"/>
                                                                
                                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                                    <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                                                        <Run Text="#"/>
                                                                        <Run Text="{Binding ShortSha, Mode=OneWay}" FontFamily="Consolas"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="•" Margin="6,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                    <TextBlock Text="{Binding Author}" 
                                                                              FontSize="11" 
                                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                    <TextBlock Text="•" Margin="6,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                    <TextBlock Text="{Binding Timestamp, StringFormat='MMM dd HH:mm'}" 
                                                                              FontSize="11" 
                                                                              Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                </StackPanel>
                                                                
                                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                                    <TextBlock FontSize="11" Foreground="#5B9BD5">
                                                                        <Run Text="{Binding FilesChanged.Count, Mode=OneWay}"/>
                                                                        <Run Text=" files"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="•" Margin="6,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                    <TextBlock FontSize="11" Foreground="#70AD47">
                                                                        <Run Text="+"/>
                                                                        <Run Text="{Binding Additions, Mode=OneWay}"/>
                                                                    </TextBlock>
                                                                    <TextBlock Text="•" Margin="6,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                    <TextBlock FontSize="11" Foreground="#E74C3C">
                                                                        <Run Text="-"/>
                                                                        <Run Text="{Binding Deletions, Mode=OneWay}"/>
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Expander>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
