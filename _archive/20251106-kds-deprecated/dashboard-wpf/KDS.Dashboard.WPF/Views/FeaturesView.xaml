<UserControl x:Class="KDS.Dashboard.WPF.Views.FeaturesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:KDS.Dashboard.WPF.ViewModels"
             xmlns:models="clr-namespace:KDS.Dashboard.WPF.Models">
    
    <UserControl.DataContext>
        <viewmodels:FeaturesViewModel/>
    </UserControl.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Refresh Button -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                      Text="KDS Feature Inventory" 
                      FontSize="20" 
                      FontWeight="SemiBold"
                      Foreground="{StaticResource TextBrush}"
                      VerticalAlignment="Center"/>
            
            <Button Grid.Column="1"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    materialDesign:ButtonAssist.CornerRadius="4">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                                Width="16" Height="16" 
                                                Margin="0,0,8,0"/>
                        <TextBlock Text="REFRESH"/>
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="0,0,0,16">
            <materialDesign:Card Style="{StaticResource ModernCard}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="âœ…" FontSize="28" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding ImplementedCount}" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#2E7D32"/>
                        <TextBlock Text="Fully Implemented" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Style="{StaticResource ModernCard}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŸ¡" FontSize="28" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding PartialCount}" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#F57C00"/>
                        <TextBlock Text="Partially Implemented" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Style="{StaticResource ModernCard}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”„" FontSize="28" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding InProgressCount}" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#7B1FA2"/>
                        <TextBlock Text="In Progress" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Style="{StaticResource ModernCard}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“‹" FontSize="28" Margin="0,0,12,0"/>
                    <StackPanel>
                        <TextBlock Text="{Binding DesignedCount}" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="#1976D2"/>
                        <TextBlock Text="Designed Only" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>
        </UniformGrid>

        <!-- Search and Filter Bar -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <TextBox Grid.Column="0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Search features..."
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,0,12,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Escape" Command="{Binding ClearFiltersCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

            <!-- Status Filter -->
            <ComboBox Grid.Column="1"
                      SelectedValue="{Binding StatusFilter}"
                      materialDesign:HintAssist.Hint="Filter by Status"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      Width="200"
                      Margin="0,0,12,0">
                <ComboBox.Items>
                    <ComboBoxItem Content="All Statuses" Tag="{x:Null}"/>
                    <ComboBoxItem Content="âœ… Fully Implemented" Tag="{x:Static models:FeatureStatus.FullyImplemented}"/>
                    <ComboBoxItem Content="ðŸŸ¡ Partially Implemented" Tag="{x:Static models:FeatureStatus.PartiallyImplemented}"/>
                    <ComboBoxItem Content="ðŸ”„ In Progress" Tag="{x:Static models:FeatureStatus.InProgress}"/>
                    <ComboBoxItem Content="ðŸ“‹ Designed Only" Tag="{x:Static models:FeatureStatus.DesignedOnly}"/>
                </ComboBox.Items>
            </ComboBox>

            <!-- Clear Filters Button -->
            <Button Grid.Column="2"
                    Content="CLEAR"
                    Command="{Binding ClearFiltersCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    materialDesign:ButtonAssist.CornerRadius="4"
                    Padding="16,6"/>
        </Grid>

        <!-- Feature List with Loading Indicator -->
        <Grid Grid.Row="3">
            <!-- Loading Overlay -->
            <Border Background="#F5F5F5" 
                    Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                    CornerRadius="4">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                IsIndeterminate="True"
                                Width="48" Height="48"/>
                    <TextBlock Text="Scanning features..." 
                              FontSize="14" 
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Margin="0,16,0,0"/>
                </StackPanel>
            </Border>

            <!-- Feature List -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                         Visibility="{Binding IsScanning, Converter={StaticResource InverseBoolToVisibility}}">
                <ItemsControl ItemsSource="{Binding FilteredFeatures}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Style="{StaticResource ModernCard}" 
                                                Margin="0,0,0,12">
                                <Expander>
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Feature Name and Status Badge -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                          Text="{Binding Name}" 
                                                          FontWeight="SemiBold" 
                                                          FontSize="16"
                                                          Foreground="{StaticResource TextBrush}"/>

                                                <TextBlock Grid.Column="1"
                                                          Text="{Binding StatusBadge}"
                                                          FontSize="18"
                                                          Margin="12,0,0,0"/>
                                            </Grid>

                                            <!-- Component Summary -->
                                            <TextBlock Grid.Row="1"
                                                      Text="{Binding ComponentSummary}"
                                                      FontSize="12"
                                                      Foreground="{StaticResource TextSecondaryBrush}"
                                                      Margin="0,4,0,0"/>
                                        </Grid>
                                    </Expander.Header>

                                    <!-- Expanded Details -->
                                    <StackPanel Margin="8,12,8,8">
                                        <!-- Files -->
                                        <TextBlock Text="ðŸ“„ Files" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Margin="0,0,0,4"/>
                                        <ItemsControl ItemsSource="{Binding Files}"
                                                     Margin="0,0,0,12">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                              FontSize="11" 
                                                              FontFamily="Consolas"
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              Margin="16,2,0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Scripts -->
                                        <TextBlock Text="âš™ï¸ Scripts" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Margin="0,0,0,4"
                                                  Visibility="{Binding Scripts.Count, Converter={StaticResource CountToVisibility}}"/>
                                        <ItemsControl ItemsSource="{Binding Scripts}"
                                                     Margin="0,0,0,12">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                              FontSize="11" 
                                                              FontFamily="Consolas"
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              Margin="16,2,0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Tests -->
                                        <TextBlock Text="ðŸ§ª Tests" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Margin="0,0,0,4"
                                                  Visibility="{Binding Tests.Count, Converter={StaticResource CountToVisibility}}"/>
                                        <ItemsControl ItemsSource="{Binding Tests}"
                                                     Margin="0,0,0,12">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                              FontSize="11" 
                                                              FontFamily="Consolas"
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              Margin="16,2,0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Documentation -->
                                        <TextBlock Text="ðŸ“š Documentation" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Margin="0,0,0,4"
                                                  Visibility="{Binding Docs.Count, Converter={StaticResource CountToVisibility}}"/>
                                        <ItemsControl ItemsSource="{Binding Docs}"
                                                     Margin="0,0,0,12">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                              FontSize="11" 
                                                              FontFamily="Consolas"
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              Margin="16,2,0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Missing Components -->
                                        <TextBlock Text="âš ï¸ Missing Components" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Foreground="#F57C00"
                                                  Margin="0,0,0,4"
                                                  Visibility="{Binding MissingComponents.Count, Converter={StaticResource CountToVisibility}}"/>
                                        <ItemsControl ItemsSource="{Binding MissingComponents}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}" 
                                                              FontSize="11" 
                                                              Foreground="#F57C00"
                                                              Margin="16,2,0,2"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Notes -->
                                        <TextBlock Text="ðŸ“ Notes" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="13"
                                                  Margin="0,12,0,4"
                                                  Visibility="{Binding Notes, Converter={StaticResource StringToVisibility}}"/>
                                        <TextBlock Text="{Binding Notes}" 
                                                  FontSize="11" 
                                                  TextWrapping="Wrap"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  Margin="16,0,0,0"/>
                                    </StackPanel>
                                </Expander>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
