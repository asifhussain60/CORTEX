<UserControl x:Class="KDS.Dashboard.WPF.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:KDS.Dashboard.WPF.ViewModels"
             Background="{DynamicResource MaterialDesignPaper}">
    <UserControl.DataContext>
        <viewmodels:DashboardViewModel/>
    </UserControl.DataContext>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Brain Dashboard" 
                           Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                           VerticalAlignment="Center"/>
                
                <!-- Large Centered Heartbeat Animation -->
                <materialDesign:PackIcon Grid.Column="1"
                                        Kind="HeartPulse" 
                                        Width="80" 
                                        Height="80" 
                                        Foreground="#E91E63"
                                        VerticalAlignment="Center"
                                        Margin="20,0,20,0"
                                        RenderTransformOrigin="0.5,0.5">
                    <materialDesign:PackIcon.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </materialDesign:PackIcon.RenderTransform>
                    <materialDesign:PackIcon.Style>
                        <Style TargetType="materialDesign:PackIcon">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsHeartbeatActive}" Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                               From="1.0" To="1.5" Duration="0:0:0.4"
                                                               AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                               From="1.0" To="1.5" Duration="0:0:0.4"
                                                               AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </materialDesign:PackIcon.Style>
                </materialDesign:PackIcon>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Circle" 
                                             Width="12" Height="12"
                                             Foreground="LimeGreen"
                                             VerticalAlignment="Center"
                                             Margin="0,0,5,0"/>
                    <TextBlock Text="Live" 
                               FontWeight="SemiBold"
                               Foreground="LimeGreen"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Brain Health Status Cards -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding BrainMetrics}" Margin="0,0,0,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1" Columns="4"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,10,0" Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <materialDesign:PackIcon Kind="{Binding Icon}"
                                                         Width="96" Height="96"
                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                         HorizontalAlignment="Left"
                                                         Margin="0,0,0,10"/>
                                
                                <TextBlock Grid.Row="1" 
                                           Text="{Binding Name}"
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                           Margin="0,0,0,5"/>
                                
                                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Value, StringFormat='{}{0:N0}'}"
                                               Style="{StaticResource MaterialDesignHeadline3TextBlock}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,0"/>
                                    <Border Background="{DynamicResource PrimaryHueLightBrush}"
                                            CornerRadius="10"
                                            Padding="8,4"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryHueDarkBrush}"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Charts Row -->
            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Event Type Distribution Chart -->
                <materialDesign:Card Grid.Column="0" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Event Type Distribution"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,0,0,15"/>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="300">
                            <ItemsControl ItemsSource="{Binding EventTypeDistribution}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Grid.Row="0"
                                                       Text="{Binding EventType}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,0,4"/>
                                            
                                            <TextBlock Grid.Column="1" Grid.Row="0"
                                                       Text="{Binding Count}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                            
                                            <ProgressBar Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                                                         Value="{Binding Percentage}"
                                                         Maximum="100"
                                                         Height="6"
                                                         Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </materialDesign:Card>

                <!-- Brain Health Summary -->
                <materialDesign:Card Grid.Column="2" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Brain Health"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   Margin="0,0,0,15"/>
                        
                        <!-- Single Brain Icon -->
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <materialDesign:PackIcon Kind="Brain"
                                                     Width="128" Height="128"
                                                     HorizontalAlignment="Center"
                                                     Foreground="#9C27B0"
                                                     Margin="0,0,0,10"/>
                            
                            <TextBlock Text="{Binding BrainHealth}"
                                      Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                      HorizontalAlignment="Center"
                                      FontWeight="Bold"
                                      Foreground="#9C27B0"
                                      Margin="0,0,0,5"/>
                            
                            <TextBlock HorizontalAlignment="Center"
                                      FontSize="11"
                                      Foreground="{DynamicResource MaterialDesignBodyLight}">
                                <Run Text="Events: "/>
                                <Run Text="{Binding TotalEvents, Mode=OneWay}" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- Status Details -->
                        <Border Grid.Row="2"
                                Background="{DynamicResource MaterialDesignDivider}"
                                Padding="12,8"
                                CornerRadius="4">
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Center"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Margin="0,0,0,4">
                                    <Run Text="Status: "/>
                                    <Run Text="{Binding BrainHealth, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock HorizontalAlignment="Center"
                                          FontSize="10"
                                          Foreground="{DynamicResource MaterialDesignBodyLight}">
                                    <Run Text="Conversations: "/>
                                    <Run Text="{Binding ConversationsCount, Mode=OneWay}"/>
                                    <Run Text=" • Patterns: "/>
                                    <Run Text="{Binding KnowledgePatternsCount, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Conversation Timeline Chart -->
            <materialDesign:Card Grid.Row="3" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Conversation Activity (Last 7 Days)"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,15"/>
                    
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ConversationTimeline}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Grid.Row="0"
                                               Text="{Binding Date, StringFormat='{}{0:MMM dd, yyyy}'}"
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"
                                               Margin="0,0,10,4"/>
                                    
                                    <TextBlock Grid.Column="2" Grid.Row="0"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                                               FontWeight="SemiBold">
                                        <Run Text="{Binding Count, Mode=OneWay}"/>
                                        <Run Text=" conv. • "/>
                                        <Run Text="{Binding TotalMessages, Mode=OneWay}"/>
                                        <Run Text=" msg."/>
                                    </TextBlock>
                                    
                                    <ProgressBar Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                                                 Value="{Binding Count}"
                                                 Maximum="10"
                                                 Height="8"
                                                 Style="{StaticResource MaterialDesignLinearProgressBar}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </ScrollViewer>
</UserControl>
