{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "Start Python Bridge",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/src/python/bridge.py",
                "--port",
                "5555"
            ],
            "isBackground": true,
            "problemMatcher": []
        }
    ]
}
