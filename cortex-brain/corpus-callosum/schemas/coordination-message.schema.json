{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Coordination Message Schema",
  "description": "Schema for messages exchanged between brain hemispheres",
  "type": "object",
  "required": [
    "message_id",
    "from",
    "to",
    "type",
    "timestamp"
  ],
  "properties": {
    "message_id": {
      "type": "string",
      "description": "Unique message identifier (UUID)",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
    },
    "from": {
      "type": "string",
      "enum": ["LEFT", "RIGHT"],
      "description": "Sending hemisphere"
    },
    "to": {
      "type": "string",
      "enum": ["LEFT", "RIGHT"],
      "description": "Receiving hemisphere"
    },
    "type": {
      "type": "string",
      "enum": [
        "PLAN_READY",
        "PHASE_COMPLETE",
        "APPROVE_PHASE",
        "EXECUTION_FEEDBACK",
        "VALIDATION_REQUEST",
        "PATTERN_EXTRACTED",
        "CHALLENGE_ISSUED"
      ],
      "description": "Message type"
    },
    "payload": {
      "type": "object",
      "description": "Message-specific data",
      "properties": {
        "plan_file": {
          "type": "string",
          "description": "Path to active plan file"
        },
        "session_id": {
          "type": "string",
          "description": "Associated session ID"
        },
        "phase_id": {
          "type": "string",
          "description": "Phase identifier"
        },
        "success": {
          "type": "boolean",
          "description": "Operation success status"
        },
        "pattern_id": {
          "type": "string",
          "description": "Extracted pattern identifier"
        },
        "metrics": {
          "type": "object",
          "description": "Execution metrics"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Error messages if any"
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Message creation time (ISO 8601)"
    },
    "priority": {
      "type": "string",
      "enum": ["LOW", "NORMAL", "HIGH", "URGENT"],
      "default": "NORMAL"
    },
    "requires_response": {
      "type": "boolean",
      "default": false,
      "description": "Whether this message requires a response"
    },
    "response_to": {
      "type": "string",
      "description": "Message ID this is responding to"
    }
  }
}
